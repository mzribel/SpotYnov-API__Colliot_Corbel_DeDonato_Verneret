{
  "openapi": "3.0.0",
  "servers": [
    {
      "description": "SpotYnov API",
      "url": "http://localhost:3000/"
    }
  ],
  "info": {
    "description": "Théo Colliot-Martinez, Marianne Corbel, Tony de Donato & Nils Verneret, B3 INFO DEV ♪",
    "version": "1.1.0",
    "title": "TP3 - SpotYnov API"
  },
  "tags": [
    {
      "name": "Authentication",
      "description": "Endpoints related to API user authentication"
    },
    {
      "name": "Authentication - Spotify",
      "description": "Endpoints related to Spotify user authentication"
    },
    {
      "name": "Users",
      "description": "Endpoints related to users"
    },
    {
      "name": "Users - Spotify",
      "description": "Endpoints related to users, accessing Spotify API"
    },
    {
      "name": "Groups",
      "description": "Endpoints related to user groups"
    },
    {
      "name": "Groups - Spotify",
      "description": "Endpoints related to groups, accessing Spotify API"
    }
  ],
  "paths": {
    "/auth/register": {
      "post": {
        "summary": "User registration",
        "requestBody": {
          "description": "User data",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "username": {
                    "type": "string",
                    "description": "Username of the new user"
                  },
                  "password": {
                    "type": "string",
                    "description": "Password of the new user"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Created"
          },
          "400": {
            "description": "Bad request (wrong user credential format)"
          },
          "409": {
            "description": "Conflict (user already exists)"
          },
          "429": {
            "description": "Too many requests"
          }
        },
        "tags": [
          "Authentication"
        ]
      }
    },
    "/auth/login": {
      "post": {
        "summary": "User login",
        "requestBody": {
          "description": "User data",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "username": {
                    "type": "string",
                    "description": "Username of the new user"
                  },
                  "password": {
                    "type": "string",
                    "description": "Password of the new user"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK"
          },
          "401": {
            "description": "Unauthorized (wrong credentials)"
          },
          "429": {
            "description": "Too many requests"
          }
        },
        "tags": [
          "Authentication"
        ]
      }
    },
    "/auth/spotify": {
      "get": {
        "summary": "Retrieves Spotify connection URL using Authorization Code Grant method",
        "responses": {
          "200": {
            "description": "Success"
          },
          "429": {
            "description": "Too many requests"
          }
        },
        "tags": [
          "Authentication - Spotify"
        ],
        "security": [
          {
            "bearerAuth": []
          }
        ]
      }
    },
    "/auth/spotify/callback": {
      "get": {
        "summary": "Automatic redirection from Spotify after user connection (not to be used manually)",
        "responses": {
          "200": {
            "description": "Success"
          },
          "429": {
            "description": "Too many requests"
          }
        },
        "tags": [
          "Authentication - Spotify"
        ]
      }
    },
    "/auth/spotify/link_account": {
      "post": {
        "summary": "Links a spotify token data to the current user",
        "requestBody": {
          "description": "Token data returned by Spotify callback",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "data": {
                    "type": "object",
                    "properties": {
                      "access_token": {
                        "type": "string"
                      },
                      "token_type": {
                        "type": "string"
                      },
                      "expires_in": {
                        "type": "string"
                      },
                      "refresh_token": {
                        "type": "string"
                      },
                      "scope": {
                        "type": "string"
                      }
                    }
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Success"
          },
          "400": {
            "description": "Bad request (token data missing or malformed)"
          },
          "401": {
            "description": "Unauthorized (not authenticated)"
          },
          "429": {
            "description": "Too many requests"
          }
        },
        "tags": [
          "Authentication - Spotify"
        ],
        "security": [
          {
            "bearerAuth": []
          }
        ]
      }
    },
    "/auth/spotify/unlink_account": {
      "delete": {
        "summary": "Deletes any Spotify token saved for the current user",
        "responses": {
          "200": {
            "description": "Success"
          },
          "400": {
            "description": "Bad request (no token data saved)"
          },
          "401": {
            "description": "Unauthorized (not authenticated)"
          },
          "429": {
            "description": "Too many requests"
          }
        },
        "tags": [
          "Authentication - Spotify"
        ],
        "security": [
          {
            "bearerAuth": []
          }
        ]
      }
    },
    "/users/": {
      "get": {
        "summary": "Retrieves API users",
        "responses": {
          "200": {
            "description": "Success"
          },
          "401": {
            "description": "Unauthorized (user is not authenticated)"
          },
          "429": {
            "description": "Too many requests"
          }
        },
        "tags": [
          "Users"
        ],
        "security": [
          {
            "bearerAuth": []
          }
        ]
      }
    },
    "/users/{userID}": {
      "get": {
        "summary": "Retrieves an API user by their ID",
